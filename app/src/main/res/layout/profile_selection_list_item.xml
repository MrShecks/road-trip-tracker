<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_selection_list_item_height"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/profileTag"
                android:layout_width="@dimen/profile_tag_width"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@color/primaryColor" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"

                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/profileTag"
                android:layout_toRightOf="@+id/profileTag"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/profile_name_running"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableTint="@color/secondaryTextColor"
                tools:drawableLeft="@drawable/ic_profile_running_white_24dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
