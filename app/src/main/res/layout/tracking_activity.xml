                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center_horizontal"
                        android:text="00:00:00" />

                </TableRow>

                <TableRow android:layout_marginBottom="8dp">

                    <TextView
