<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="routeSummary"
            type="ie.justonetech.roadtriptracker.utils.RouteSummaryFormatter" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"

        android:checkable="true"
        android:clickable="true"
        android:focusable="true"

        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:drawableStart="@drawable/ic_event_black_24dp"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="8dp"

                android:padding="4dp"
                android:text="@{routeSummary.startTime}"
                android:textAllCaps="true"
                android:textColor="@color/secondaryTextColor"
                android:textSize="16sp"
                app:drawableTint="@color/secondaryTextColor"
                tools:text="[Start Time]" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="@dimen/route_summary_list_profile_width"
                    android:layout_height="@dimen/route_summary_list_profile_height"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"

                    android:profileImage="@{routeSummary.data.profile.id}"
                    android:contentDescription="@{routeSummary.profileName}"

                    tools:srcCompat="@drawable/ic_profile_running_black_24dp"
                    android:tint="@color/primaryColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{routeSummary.totalDuration}"
                        tools:text="00:00:00" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/route_summary_list_duration_title"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{routeSummary.distance}"
                        tools:text="0 KM" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/route_summary_list_distance_title"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/averageSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{routeSummary.avgSpeed}"
                        tools:text="0 KPH" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/route_summary_list_avg_speed_title"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryColor" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>