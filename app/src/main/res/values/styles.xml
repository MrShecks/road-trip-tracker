<resources>

    <style name="RoadTripTracker.Theme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- The DrawerLayout ArrowToggleIcon uses textColorSecondary for its color
             but the grey is too dark against the primary blue, need to fix that
        -->
<!--        <item name="android:textColorSecondary">@color/secondaryTextColor</item>-->
        <item name="android:textColorSecondary">@color/primaryTextColor</item>

        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:colorBackground">#FFFAFAFA</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <item name="actionModeBackground">@color/primaryColor</item>

        <item name="tabStyle">@style/AppTheme.TabLayout</item>
        <item name="bottomNavigationStyle">@style/AppTheme.BottomNavigationView</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/primaryTextColor</item>
        <item name="tabSelectedTextColor">@color/secondaryColor</item>
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="RoadTripTracker.Theme.NoActionBar" parent="RoadTripTracker.Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    </style>

    <style name="AppTheme.TrackingButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.LockButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/shape_round_lock_button</item>

    </style>

    <style name="AppTheme.LockProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/primaryTextColor</item>
        <item name="android:progressTint">@color/primaryColor</item>
        <item name="android:minHeight">16dp</item>
    </style>

</resources>
